<% if comment.user == current_user || current_user == post.user %>
    <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } , remote: true do %>
        <span class="glyphicon glyphicon-trash btn-group btn-group-xs delete-comment"></span>
    <% end %>
<% end %>
<div class="user-name">
  <%= comment.user.user_name %>
</div>
<div class="comment-content">
  <%= comment.content %>
</div>
