<div class="post posts-wrapper row">
    <div class="post-head">
        <div class="name">
        <strong><%= @post.user.user_name %></strong>
        </div>
    </div>
    <div class="image center-block">
        <%= image_tag @post.image.url(:medium), class:'img-responsive' %>
    </div>
    <p class="caption">
        <em><%= @post.caption %></em>
    </p>
</div>

<div class="text-center edit-links">
    <h3>
        <% if current_user.id == @post.user.id %>
            <%= link_to "Edit", edit_post_path(@post) %> //
            <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
            //
            <%= link_to "Cancel", posts_path %>
        <% else %>
            <%= link_to "Cancel", posts_path %>
        <% end %>
    </h3>
</div>
